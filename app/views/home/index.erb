<%= form_tag("/home/calculate_vacation_days", method: "get") do %>
    <%= label_tag(:start_date, "Start Date:") %>
    <%= text_field_tag(:start_date) %>

    <%= label_tag(:vacation_balance, "Vacation Balance") %>
    <%= text_field_tag(:vacation_balance) %>

    <%= label_tag(:accrual_rate, "Initial Accrual Rate:") %>
    <%= text_field_tag(:accrual_rate) %>

    <%= label_tag(:salesforce_text, "Text from SalesForce Time Off:") %>
    <%= text_field_tag(:salesforce_text) %>

    <%= label_tag(:end_date, "Calculate my vacation days as of:") %>
    <%= text_field_tag(:end_date) %>

    <%= submit_tag("Submit") %>
<% end %>